<h3 class="pad-bottom"> Order Summary </h3>
<div class="card border-dark mb-3 bg-pink">
    <div class="card-body">
        <h5 class="card-title">Subtotal <span style="float:right;"> $<%= @total %> </span> </h5>
        <h5 class="card-title">Shipping <span style="float:right;"> FREE </span> </h5>
        <hr>
        <h4 class="card-title">Total <span style="float:right;"> $<%= @total %> </span> </h4>
        <br>

        <% if !logged_in? %>
            <%= link_to "Login", login_path, method: :get, class: "btn btn-sm btn-primary center margin-bottom-sm"%>
        <% end %>
        <% if @empty %>
            <p> You must have items in your cart to checkout </p>
        <% end %>

        <%= button_to @checkout_text, new_order_path, :disabled => @empty, method: :get, class: "btn btn-sm btn-magenta center"%>
    </div>
</div>