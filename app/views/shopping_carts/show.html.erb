

<div class="containter mx-auto">
  <div class="row hide-lg-more">
    <div class="col-1"> </div>
    <div class="col-10">
      <div class="container">
        <div class="row">
          <div class="col-7 bg-cream margin-top pad-all" >
            <table class="table table-striped bg-light-pink">
              <thead >
                <h3 class="center pad-top pad-bottom">Shopping Cart</h3>
                <tr>
                  <th scope="col">Card</th>
                  <th scope="col">Description</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Price</th>
                  <th> </th>
                </tr>
              </thead>
              <tbody>
                <%= render 'cart'%>
            </table>
          </div>

          <div class="col-1"> </div>

          <div class="col-4 pad-top margin-top"> 
            <div class="jumbotron bg-cream">
              <%= render 'details'%>
            </div>
          </div>

        </div>
      </div>
    </div>

    <div class="col-1"> </div>
  </div>

  <div class="hide-sm-more" id="sm">
    <div class="row pad-all-md">
      <div class="col-6">
        <h5 class="label-bold"> CART </h5>
      </div>
      <div class="col-2">
        
      </div>
    </div>

    <div class="row">
      <table class="table table-striped">
        <%= render 'cart' %>
      </table>
    </div>

    <div class="row margin-top-sm">
      <div class="col-1"> </div>
      <div class="col-10 jumbotron bg-cream margin-bottom">
        <%= render 'details'%>
      </div>
    </div>
  </div>
      

</div>
