<div class="navbar-pad container">

  <div class="row fill margin-bottom">

    <div class="col-3  jumbotron bg-cream">
      <h3> Filter Search </h3>
      <hr>
      <%= form_with(url: cards_path, method: "get", local: true) do %>
        <% @columns.each do |column| %>
          <strong> <%= column %> </strong>
          <br> <br>
          <% all_column_filters(column).each do |filter| %>
            <div class= "form-group row">
              <%= check_box_tag(filter.parameterize.underscore.to_sym) %> &nbsp; &nbsp;
              <%= label_tag(filter, filter ) %> 
            </div>
          <% end %>
          <hr>
        <% end %>
        <%= submit_tag("Save") %>
      <% end %>
    </div>

    <div class="col-1"> </div>

    <div class="col-8 jumbotron bg-cream">
      <h3 class="center"> Cards </h3>
      
      <hr>
      
      <% @card_groups.each do |group| %>
      <div class="row">
        <% group.each do |card| %>
          <div class="col-4 img-cont img-center">
            <%= link_to card do %>
              <% if card.card_type == "fold over"%>
                <img class="fold-over responsive img-center padding-sides" src= <%= asset_path(card.img) %> />
              <% else %>
                <img class="post-card responsive margin-top-sm img-center padding-sides" src= <%= asset_path(card.img) %> height=150px width=200px/>
              <% end %>
              <br>
              <p class="center"> <%= card.short_description %> <p>
              <br> 
            <% end %>
          </div>
        <% end %>
      </div>
      <% end %>
    </div>

  </div>
</div>
