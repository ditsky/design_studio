<div class="containter-fluid">
  <div class="row margin-top">
    <% if @card.card_type == "post card"%>
      <div class="col-md-4 offset-md-2 margin-top-postcard">
    <% else %>
      <div class="col-md-4 offset-md-2">
    <% end %>
      <div id="carouselIndicators" class="carousel slide" data-ride="carousel" data-interval="false">
        <ol class="carousel-indicators">
          <% slide = 0%>
          <% @card.images.each do |image| %>
            <% if slide == 0%>
              <li data-target="#carouselIndicators" data-slide-to=<%=slide.to_s%> class="active"> <img class="d-block w-100" src=<%= asset_path(image.filename)%>
                class="img-fluid"></li>
            <% else %>
              <li data-target="#carouselIndicators" data-slide-to=<%=slide.to_s%>><img class="d-block w-100" src=<%= asset_path(image.filename)%>
                  class="img-fluid"></li>
            <% end %>
            <% slide = slide + 1%>
          <% end %>
        </ol>
        <div class="carousel-inner margin-bottom">
          <% item = 0 %>
          <% @card.images.each do |image| %>
            <% if item == 0 %>
              <div class="carousel-item active">
                <img src=<%= asset_path(image.filename)%> class="d-block w-100" alt="...">
              </div>
            <% else %>
              <div class="carousel-item">
                <img src=<%= asset_path(image.filename)%> class="d-block w-100" alt="...">
              </div>
            <% end %>
            <% item = item + 1%>
          <% end %>
        </div>
        <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        
        <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <div class="col-md-4 pad-top-lg">
      <div class="jumbotron bg-cream margin-top-lg">
        <h3> <%= @card.short_description %> </h3>
        <p> $5.00 </p>
        <hr>
        <p> <%= @card.long_description%> </p>
        <%= button_to 'Add to cart', selections_path(selection: {shopping_cart_id: current_cart.id, card_id: @card.id}), class: "btn btn-primary" %>
        <% if user_admin? %>
          <%= link_to 'Edit', edit_card_path(@card) %> |
        <% end %>
      </div>
    </div>
  </div>
</div>
