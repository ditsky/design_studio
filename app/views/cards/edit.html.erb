<%= render 'form', card: @card %>

<h4 class="center"> Images: </h4>

<div class="row margin-bottom">
    <div class="offset-md-4 col-4 gray-border">
        <div class="container">
            <% @card.images_s3.each do |image| %>
                <div class="row">
                    <div class="col-10">
                        <img class="responsive max-size" src=<%= rails_blob_path(image) %>>
                    </div>
                    <div class="col-2">
                         <%= link_to delete_image_card_path(image: image), method: :delete, class: "btn btn-danger margin-top" do %>
                            <i class="fas fa-times-circle fa-2x"></i>
                        <% end %>

                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
